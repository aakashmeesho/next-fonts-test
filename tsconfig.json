{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"],
      "@mesh-icons/*": ["./src/mesh-ui/assets/icons/*"],
      "@mesh-atoms/*": ["./src/mesh-ui/atoms/*"],
      "@mesh-components/*": ["./src/mesh-ui/components/*"],
      "@mesh-config/*": ["./src/mesh-ui/config/*"],
      "@mesh-helpers/*": ["./src/mesh-ui/helpers/*"],
      "@mesh-molecules/*": ["./src/mesh-ui/molecules/*"],
      "@mesh-typings/*": ["./src/mesh-ui/typings/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
